<%= semantic_form_for @bookwork do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :library_id, :as => :select, :collection => Library.all %>
    <%= f.input :bookstore_id, :as => :select, :collection => Bookstore.all %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
